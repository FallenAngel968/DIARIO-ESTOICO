rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para colecciones de usuario
    match /usuarios/{userId} {
      // Permitir lectura y escritura del perfil de usuario
      allow read, write: if request.auth.uid == userId;

      // Reglas para el diario
      match /entries/{document=**} {
        allow read, write, delete: if request.auth.uid == userId;
      }

      // Reglas para reflexiones
      match /reflexiones/{document=**} {
        allow read, write, delete: if request.auth.uid == userId;
      }
    }

    // Reglas legacy para diarios (mantener compatibilidad)
    match /diarios/{userId}/entries/{document=**} {
      allow read, write, delete: if request.auth.uid == userId;
    }

    match /diarios/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Denegar acceso a todo lo dem√°s por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
